
@{
    ViewBag.Title = "工序";
    var Processes = ViewBag.Processes as List<WebApplication1.Models.Process>;
    var workCenters = ViewBag.Processes as WebApplication1.Models.ERP.WorkCenters;
}
<div class="container-fluid bg-white py-3 px-4 shadow-sm rounded-3 mt-3 mb-4 d-flex align-items-center justify-content-between">
    <h2 class="mb-0 fw-bold text-primary">@ViewBag.WorkCenter.Name-@ViewBag.Title</h2>
    <a href="@Url.Action("Index", "WorkCenter")" class="btn btn-outline-primary px-4 fw-bold shadow-sm">回工作中心</a>
</div>

<div class="container py-4">
    <div class="row row-cols-5 g-4">
        @for (int i = 0; i < Processes.Count; i++)
        {
            var wc = Processes[i];
            var controllerName = (wc.Name == "IPQC" || wc.Name == "IQC") ? "QC" : "WorkReport";
            <div class="col d-flex">
                <a href="@Url.Action("Index", controllerName, new { id = wc.Id })" class="text-decoration-none w-100">
                    <div class="workcenter-card flex-fill">
                        @wc.Name
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .workcenter-card {
        min-width: 100px;
        min-height: 54px;
        background: linear-gradient(180deg,#e8f2fa,#a7c8e6);
        border-radius: 16px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        font-weight: bold;
        font-size: 1.05rem;
        box-shadow: 0 2px 10px rgba(30,80,180,0.09);
        margin: 0 auto;
        letter-spacing: 2px;
        color: #2c4567;
        transition: all 0.18s;
        padding: 5px 10px;
        border: 2px solid #e5eaf2;
        cursor: pointer;
    }

        .workcenter-card:hover {
            background: #2369b7 !important;
            color: #fff !important;
            border-color: #2369b7 !important;
            font-size: 1.15rem;
            box-shadow: 0 4px 14px rgba(34,82,160,0.17);
        }
</style>
