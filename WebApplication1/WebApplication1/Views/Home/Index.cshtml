@{
    ViewBag.Title = "";
}

<main>
    <div class="container py-4">
        <div class="row justify-content-center">
            <!-- 卡片1：製造情報 -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <a href="/ManufacturingInfo" class="text-decoration-none">
                    <div class="card h-100 shadow border-0 hover-card" style="background: linear-gradient(135deg, #3056d3 80%, #ffffff 100%);">
                        <div class="card-body d-flex align-items-center justify-content-center" style="min-height:110px;">
                            <h5 class="card-title text-white mb-0 fw-bold">製造情報</h5>
                        </div>
                    </div>
                </a>
            </div>
            <!-- 卡片2：報工作業 -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <a href="/WorkCenter" class="text-decoration-none">
                    <div class="card h-100 shadow border-0 hover-card" style="background: linear-gradient(135deg, #ffa726 80%, #fff8e1 100%);">
                        <div class="card-body d-flex align-items-center justify-content-center" style="min-height:110px;">
                            <h5 class="card-title text-dark mb-0 fw-bold">報工作業</h5>
                        </div>
                    </div>
                </a>
            </div>
            <!-- 卡片3：資料設定 -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <a href="/DataSettings" class="text-decoration-none">
                    <div class="card h-100 shadow border-0 hover-card" style="background: linear-gradient(135deg, #43a047 80%, #e8f5e9 100%);">
                        <div class="card-body d-flex align-items-center justify-content-center" style="min-height:110px;">
                            <h5 class="card-title text-white mb-0 fw-bold">資料設定</h5>
                        </div>
                    </div>
                </a>
            </div>
            <!-- 卡片4：報表中心 -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <a href="/ReportCenter" class="text-decoration-none">
                    <div class="card h-100 shadow border-0 hover-card" style="background: linear-gradient(135deg, #6f42c1 80%, #ede7f6 100%);">
                        <div class="card-body d-flex align-items-center justify-content-center" style="min-height:110px;">
                            <h5 class="card-title text-white mb-0 fw-bold">報表中心</h5>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <style>
        .hover-card {
            transition: transform 0.18s, box-shadow 0.18s;
        }
        .hover-card:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 8px 32px 0 rgba(50,50,90,0.16);
            z-index: 2;
        }
       
    </style>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</main>
